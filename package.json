{
  "name": "vola-cli",
  "version": "0.1.3",
  "description": "用于搭建 vite + vue3 项目的脚手架工具",
  "main": "dist/lib/library.js",
  "bin": {
    "vola": "./bin/vola"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf dist",
    "dev": "npm run clean && tsc -w --removeComments false",
    "vola": "node ./bin/vola",
    "prepublish": "npm run clean && tsc",
    "commit": "git add . && git-cz && git push origin",
    "release": "node ./scripts/release.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Alessandro-Pang/vola-cli.git"
  },
  "keywords": [
    "vite",
    "vue3",
    "cli",
    "typescript"
  ],
  "author": "ziYang <pcy1314@163.com> (https://gitee.com/Alessandro-pang)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Alessandro-Pang/vola-cli/issues"
  },
  "homepage": "https://github.com/Alessandro-Pang/vola-cli#readme",
  "dependencies": {
    "axios": "^0.27.2",
    "chalk": "4.1.2",
    "commander": "9.4.0",
    "cross-spawn": "7.0.3",
    "figlet": "^1.5.2",
    "inquirer": "9.0.1",
    "node-emoji": "^1.11.0",
    "ora": "^6.1.2",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-angular": "17.1.0",
    "@types/inquirer": "^9.0.1",
    "@types/node": "18.7.14",
    "@typescript-eslint/eslint-plugin": "5.0.0",
    "@typescript-eslint/parser": "5.36.1",
    "conventional-changelog-cli": "^2.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "7.0.0",
    "eslint": "8.0.1",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-n": "15.0.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.0.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "standard-version": "9.3.2",
    "typescript": "*"
  },
  "lint-staged": {
    "src/*.{js,ts,json}": [
      "npm run lint",
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "cz-customizable": {
      "config": "./.cz-config.cjs"
    }
  }
}
